<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <h2>Search Terms</h2>
    <h3><%= name %></h3>
    <h3><%= email %></h3>
    <ul>
      <% if (locals.users) {%> <% users.forEach(user => { %> <% if (((user.firstName + ' ' +
      user.lastName).includes(name) && name != '') || (user.email.includes(email) && email != '')) { %>
      <li>
        ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %>, Email: <%= user.email %><% if (user.age !=
        '') { %>, Age: <%=user.age %> <% } %> <% if (user.bio != '') { %>, Bio: <%= user.bio %> <% }%>
      </li>
      <% } %> <% }); %> <% } %>
    </ul>
    <a href="/">Back to home</a>
  </body>
</html>
